{
  "parser": "babel-eslint",
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "one-var": 2,
    "no-var": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "keyword-spacing": [
      "error"
    ],
    "block-spacing": [
      "error"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "object-property-newline": [
      "error"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "no-path-concat": "off",
    "space-before-function-paren": "error"
  }
}